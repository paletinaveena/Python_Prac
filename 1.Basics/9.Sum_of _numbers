# Take numbers until 0 is given and display sum of numbers
# Method - 1
num = int(input("Enter number [0 to stop] :"))
total = 0
while num != 0:
    total += num
    num = int(input("Enter number [0 to stop] :"))

print(f"Total = {total}")

# Method - 2
total = 0
while True:
    num = int(input("Enter number[Enter 0 to stop]:"))
    if num == 0:
        break
    total += num

print(f"The Total:{total}")
